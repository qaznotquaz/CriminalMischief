<?xml version="1.0" encoding="UTF-8"?>
<project name="criminal_mischief" default="all">
  
  
  <property file="criminal_mischief.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.egg"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
    <include name="*.klib"/>
    <include name="*.swc"/>
    <include name="*.war"/>
    <include name="*.ane"/>
    <include name="*.zip"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.json-java.classpath">
    <pathelement location="${basedir}/../../Downloads/json-20190722.jar"/>
  </path>
  
  <path id="library.net.java.dev.jna:jna-platform:5.6.0.classpath">
    <pathelement location="${path.variable.maven_repository}/net/java/dev/jna/jna-platform/5.6.0/jna-platform-5.6.0.jar"/>
    <pathelement location="${path.variable.maven_repository}/net/java/dev/jna/jna/5.6.0/jna-5.6.0.jar"/>
  </path>
  
  <path id="library.net.java.dev.jna:jna:5.6.0.classpath">
    <pathelement location="${path.variable.maven_repository}/net/java/dev/jna/jna/5.6.0/jna-5.6.0.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module criminal mischief -->
  
  <dirname property="module.criminal_mischief.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.criminal_mischief" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.criminal_mischief" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.criminal_mischief" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.criminal_mischief" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="criminal_mischief.output.dir" value="${module.criminal_mischief.basedir}/out/production/criminal mischief"/>
  <property name="criminal_mischief.testoutput.dir" value="${module.criminal_mischief.basedir}/out/test/criminal mischief"/>

  <path id="criminal_mischief.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="criminal_mischief.module.production.classpath">
    <path refid="${module.jdk.classpath.criminal_mischief}"/>
    <path refid="library.net.java.dev.jna:jna:5.6.0.classpath"/>
    <pathelement location="${basedir}/lib/jna-5.6.0.jar"/>
    <pathelement location="${basedir}/lib/jna-platform-5.6.0.jar"/>
    <path refid="library.json-java.classpath"/>
  </path>
  
  <path id="criminal_mischief.runtime.production.module.classpath">
    <pathelement location="${criminal_mischief.output.dir}"/>
    <path refid="library.net.java.dev.jna:jna:5.6.0.classpath"/>
    <pathelement location="${basedir}/lib/jna-5.6.0.jar"/>
    <pathelement location="${basedir}/lib/jna-platform-5.6.0.jar"/>
    <path refid="library.json-java.classpath"/>
  </path>
  
  <path id="criminal_mischief.module.classpath">
    <path refid="${module.jdk.classpath.criminal_mischief}"/>
    <pathelement location="${criminal_mischief.output.dir}"/>
    <path refid="library.net.java.dev.jna:jna:5.6.0.classpath"/>
    <pathelement location="${basedir}/lib/jna-5.6.0.jar"/>
    <pathelement location="${basedir}/lib/jna-platform-5.6.0.jar"/>
    <path refid="library.json-java.classpath"/>
  </path>
  
  <path id="criminal_mischief.runtime.module.classpath">
    <pathelement location="${criminal_mischief.testoutput.dir}"/>
    <pathelement location="${criminal_mischief.output.dir}"/>
    <path refid="library.net.java.dev.jna:jna:5.6.0.classpath"/>
    <pathelement location="${basedir}/lib/jna-5.6.0.jar"/>
    <pathelement location="${basedir}/lib/jna-platform-5.6.0.jar"/>
    <path refid="library.json-java.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.criminal_mischief">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.criminal_mischief">
    <patternset refid="excluded.from.module.criminal_mischief"/>
  </patternset>
  
  <path id="criminal_mischief.module.sourcepath">
    <dirset dir="${module.criminal_mischief.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.criminal_mischief" depends="compile.module.criminal_mischief.production,compile.module.criminal_mischief.tests" description="Compile module criminal mischief"/>
  
  <target name="compile.module.criminal_mischief.production" depends="register.custom.compilers" description="Compile module criminal mischief; production classes">
    <mkdir dir="${criminal_mischief.output.dir}"/>
    <javac2 destdir="${criminal_mischief.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.criminal_mischief}/javac">
      <compilerarg line="${compiler.args.criminal_mischief}"/>
      <bootclasspath refid="criminal_mischief.module.bootclasspath"/>
      <classpath refid="criminal_mischief.module.production.classpath"/>
      <src refid="criminal_mischief.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.criminal_mischief"/>
    </javac2>
    
    <copy todir="${criminal_mischief.output.dir}">
      <fileset dir="${module.criminal_mischief.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.criminal_mischief.tests" depends="register.custom.compilers,compile.module.criminal_mischief.production" description="compile module criminal mischief; test classes" unless="skip.tests"/>
  
  <target name="clean.module.criminal_mischief" description="cleanup module">
    <delete dir="${criminal_mischief.output.dir}"/>
    <delete dir="${criminal_mischief.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.criminal_mischief" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.criminal_mischief" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.criminalmischief:jar" value="${basedir}/out/artifacts/criminalmischief_jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.criminalmischief.jar" value="${artifacts.temp.dir}/criminalmischief.jar"/>
  </target>
  
  <target name="artifact.criminalmischief:jar" depends="init.artifacts, compile.module.criminal_mischief" description="Build &#39;criminalmischief:jar&#39; artifact">
    <property name="artifact.temp.output.criminalmischief:jar" value="${artifacts.temp.dir}/criminalmischief_jar"/>
    <mkdir dir="${artifact.temp.output.criminalmischief:jar}"/>
    <jar destfile="${temp.jar.path.criminalmischief.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${criminal_mischief.output.dir}"/>
      <zipfileset src="${basedir}/lib/jna-5.6.0.jar"/>
      <zipfileset src="${basedir}/lib/jna-platform-5.6.0.jar"/>
      <zipfileset src="${basedir}/../../Downloads/json-20190722.jar"/>
    </jar>
    <copy file="${temp.jar.path.criminalmischief.jar}" tofile="${artifact.temp.output.criminalmischief:jar}/criminalmischief.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.criminalmischief:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.criminalmischief:jar}"/>
    <copy todir="${artifact.output.criminalmischief:jar}">
      <fileset dir="${artifact.temp.output.criminalmischief:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>

  <target name="generate exe">
    <property name="launch4j.dir" location="C:/Program Files (x86)/Launch4j" />
    <taskdef name="launch4j"
             classname="net.sf.launch4j.ant.Launch4jTask"
             classpath="${launch4j.dir}/launch4j.jar:${launch4j.dir}/lib/xstream-1.4.8.jar" />
    <launch4j configFile="C:/Users/JasonEaton/IdeaProjects/criminal mischief/.idea/criminalmischiefLaunch4jConfig.xml"/>
  </target>

  <target name="generate zip" depends="generate exe">
    <zip destfile="C:/Users/JasonEaton/IdeaProjects/criminal mischief/out/artifacts/zip/criminalmischief.zip" basedir="C:/Users/JasonEaton/IdeaProjects/criminal mischief/out/artifacts/zip/toZip" update="true"/>
  </target>
</project>